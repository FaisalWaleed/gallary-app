<h1 style="color: white">All Quotes <span class="pull-right"><%= link_to 'Add Quote', new_listing_path, class: "btn btn-primary" %></span> </h1>

<div class="col-md-3"></div>
<div class="col-md-6">
  <table class="table">
    <thead>
      <tr>
        <th>Quoatations</th>
        <th colspan="2"></th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @listings.each do |listing| %>
        <tr>
          <td style="width: 50px"><%= image_tag listing.image %></td>
          <td colspan="2"></td>
          <td><%= link_to 'Show', listing, class: "btn btn-info" %>
          <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-primary" %>
          <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


